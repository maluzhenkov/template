mixin icon(name,mod)
	if(mod)
		svg(class="svg-sprite-icon icon-" + name + ' ' + mod)
			use(xlink:href="static/images/svg/symbol/sprite.svg#" + name)
	else
		svg(class="svg-sprite-icon icon-" + name)
			use(xlink:href="static/images/svg/symbol/sprite.svg#" + name)

mixin img(name,mod)
	if(mod)
		img(src="static/images/svg/"+ name + ".svg" class="img-" + name + ' ' + mod)
	else
		img(src="static/images/svg/"+ name + ".svg" class="img-" + name)